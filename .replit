compile = ["dune", "build"]
run = ["dune", "exec", "jerbo"]
entrypoint = "01/task.ml"
hidden = ["_build"]
onBoot = "utop -version"

[languages.OCaml]
pattern = "**/*.{ml,mli}"

[languages.OCaml.languageServer]
start = "ocamllsp"

[nix]
channel = "stable-23_11"

[packager]
language = "dotnet"

[packager.features]
packageSearch = true

[env]
DOTNET_NOLOGO = "1"
DOTNET_CLI_TELEMETRY_OPTOUT = "1"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["dotnet", "run"]
deploymentTarget = "cloudrun"
